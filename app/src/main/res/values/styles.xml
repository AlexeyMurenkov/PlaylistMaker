<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_top_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:drawablePadding">@dimen/dimen_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="activity_main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/dimen_12</item>
        <item name="iconSize">@dimen/dimen_24</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="activity_settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/dimen16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:trackTint">?attr/colorSecondary</item>
        <item name="android:thumbTint">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>

    </style>

    <style name="edit_text_single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorSurfaceVariant</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:drawablePadding">@dimen/dimen_8</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="drawableTint">?attr/colorSurfaceVariant</item>
    </style>

    <style name="cross_on_edit_text">
        <item name="android:layout_width">@dimen/dimen_16</item>
        <item name="android:layout_height">@dimen/dimen_16</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:src">@drawable/cross</item>
        <item name="tint">?attr/colorSurfaceVariant</item>
    </style>
</resources>