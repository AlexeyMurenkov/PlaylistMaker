<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="progress_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
        <item name="android:indeterminateTint">@color/yp_blue</item>
        <item name="android:layout_marginTop">@dimen/dimen_140</item>
    </style>

    <style name="top_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:layout_marginLeft">@dimen/dimen_12</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="activity_settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="trackTint">?attr/colorSecondary</item>
        <item name="thumbTint">?attr/colorOnSecondary</item>
    </style>

    <style name="edit_text_single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorSurfaceVariant</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:drawablePadding">@dimen/dimen_8</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="drawableTint">?attr/colorSurfaceVariant</item>
    </style>

    <style name="cross_on_edit_text">
        <item name="android:layout_width">@dimen/dimen_16</item>
        <item name="android:layout_height">@dimen/dimen_16</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:src">@drawable/cross</item>
        <item name="tint">?attr/colorSurfaceVariant</item>
    </style>

    <style name="search_caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="search_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_24</item>
    </style>

    <style name="search_adapter_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="card_track_linear_layout.vertical" parent="search_adapter_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_track_image">
        <item name="android:layout_width">@dimen/dimen_44</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="android:layout_gravity">center_vertical|center</item>
    </style>

    <style name="card_track_arrow">
        <item name="android:layout_width">@dimen/dimen_24</item>
        <item name="android:layout_height">@dimen/dimen_24</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:src">@drawable/arrow_forward</item>
    </style>

    <style name="card_track_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="card_track_text.artist" parent="card_track_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="card_track_text.time" parent="card_track_text.artist">
        <item name="drawableLeftCompat">@drawable/dot</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_24</item>
        <item name="android:layout_marginVertical">@dimen/dimen_12</item>
    </style>

    <style name="player.cover" parent="player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">@dimen/dimen_24</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="player.button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="player.text" parent="player">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="player.text.artist" parent="player.text">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="player.text.progress" parent="player.text">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginVertical">0dp</item>
    </style>

    <style name="player.text.value" parent="player.text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:layout_marginVertical">@dimen/dimen_8</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="player.text.caption" parent="player.text.value">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="media">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="media.child" parent="media">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="media.child.imaged_text" parent="media.child">
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_marginTop">@dimen/dimen_108</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="media.child.tab_selector" parent="media.child">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="tabBackground">@drawable/media_tab_selector</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="media.child.tracks" parent="media.child">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
    </style>
    
    <style name="nav_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_56</item>
        <item name="itemIconPadding">0dp</item>

        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemTextAppearanceInactive">@style/nav_view.item_text</item>
        <item name="itemTextAppearanceActive">@style/nav_view.item_text</item>
        <item name="itemIconSize">@dimen/dimen_24</item>
        <item name="itemIconTint">@drawable/nav_view_color</item>
        <item name="itemTextColor">@drawable/nav_view_color</item>
        <item name="itemPaddingTop">@dimen/dimen_8</item>
        <item name="itemPaddingBottom">@dimen/dimen_8</item>
        <item name="itemActiveIndicatorStyle" />
    </style>

    <style name="nav_view.separator">
        <item name="android:background">@color/yp_light_gray</item>
    </style>

    <style name="nav_view.item_text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
</resources>