<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_top_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:drawablePadding">@dimen/main_icon_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="activity_main_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/main_button_margin</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconSize">@dimen/main_button_icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
    </style>

    <style name="activity_settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/settings_item_margin</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
    </style>
</resources>