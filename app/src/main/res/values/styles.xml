<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_top_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:drawablePadding">@dimen/dimen_12</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="activity_main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/dimen_12</item>
        <item name="iconSize">@dimen/dimen_24</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="activity_settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="trackTint">?attr/colorSecondary</item>
        <item name="thumbTint">?attr/colorOnSecondary</item>
    </style>

    <style name="edit_text_single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorSurfaceVariant</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:drawablePadding">@dimen/dimen_8</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="drawableTint">?attr/colorSurfaceVariant</item>
    </style>

    <style name="cross_on_edit_text">
        <item name="android:layout_width">@dimen/dimen_16</item>
        <item name="android:layout_height">@dimen/dimen_16</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:src">@drawable/cross</item>
        <item name="tint">?attr/colorSurfaceVariant</item>
    </style>

    <style name="search_error">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="search_error_action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_24</item>
    </style>

    <style name="card_track_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="card_track_linear_layout.vertical" parent="card_track_linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_track_image">
        <item name="android:layout_width">@dimen/dimen_44</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="android:layout_gravity">center_vertical|center</item>
    </style>

    <style name="card_track_arrow">
        <item name="android:layout_width">@dimen/dimen_24</item>
        <item name="android:layout_height">@dimen/dimen_24</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:src">@drawable/arrow_forward</item>
    </style>

    <style name="card_track_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="card_track_text.artist" parent="card_track_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="card_track_text.time" parent="card_track_text.artist">
        <item name="drawableLeftCompat">@drawable/dot</item>
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
    </style>

</resources>