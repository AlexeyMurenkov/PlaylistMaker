<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorPrimaryVariant">@color/yp_text_gray</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSecondary">@color/yp_light_gray</item>
        <item name="colorOnSecondary">@color/yp_text_gray</item>

        <item name="colorSurface">@color/yp_light_gray</item>
        <item name="colorOnSurface">@color/yp_black</item>
        <item name="colorSurfaceVariant">@color/yp_text_gray</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.Main" parent="Base.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorOnPrimary">@color/yp_white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>